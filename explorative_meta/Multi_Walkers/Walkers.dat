MOLINFO STRUCTURE=reference.pdb 

# Define the group of atoms 
c1: CENTER ATOMS=1175,1196,1222,1245,1330,1331
c2: CENTER ATOMS=3262
d1: DISTANCE ATOMS=c1,c2


# Define the multiple walkers
metad: METAD ... 
   ARG=d1
   PACE=400 
   HEIGHT=1.2 
   BIASFACTOR=10  
   SIGMA=0.007 

   # Shared hills file
   FILE=../HILLS_shared

   # Use a "large" grid
   GRID_MIN=0 
   GRID_MAX=2.2

   # call the MPI walkers 
   WALKERS_MPI

   # I have 4 subfolders in the working directory
   WALKERS_DIR=../

   # Recover the c(t) for reweighting
   CALC_RCT
...
PRINT ARG=d1,metad.bias,metad.rbias,pbmetad.rct FILE=COLVAR STRIDE=100

# Save the coordinates of the "interesting" atoms around Ca2+
DUMPATOMS STRIDE=10 FILE=traj.xtc ATOMS=1000-1545 
